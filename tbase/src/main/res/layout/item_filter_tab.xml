<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/filter_tab_height">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/filter_tab_height"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        >

        <TextView
            android:id="@+id/item_filter_tab_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tab1tab1tab1tab1tab1tab1tab1tab1tab1tab1tab1tab1tab1tab1tab1tab1tab1tab1tab1tab1tab1tab1tab1tab1tab1tab1tab1"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="14dp"
            android:textColor="@color/filter_tab_textcolor"
            />

        <ImageView
            android:id="@+id/item_filter_tab_icon"
            android:layout_width="@dimen/dp16"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_xiala"
            android:paddingLeft="6dp"
            />

    </LinearLayout>


</RelativeLayout>